{
  "mcp_server_templates": {
    "zapier": {
      "name": "Zapier Integration",
      "description": "Connect to Zapier workflows and automations",
      "server_url": "https://api.zapier.com/mcp",
      "tools": [
        {
          "name": "trigger_zap",
          "description": "Trigger a Zapier automation",
          "headers": {
            "Authorization": "Bearer YOUR_ZAPIER_TOKEN"
          },
          "query_params": {
            "workspace_id": "YOUR_WORKSPACE_ID"
          }
        }
      ]
    },
    "salesforce": {
      "name": "Salesforce CRM",
      "description": "Connect to Salesforce for customer data",
      "server_url": "https://your-instance.salesforce.com/services/mcp",
      "tools": [
        {
          "name": "lookup_contact",
          "description": "Look up contact information",
          "headers": {
            "Authorization": "Bearer YOUR_SF_TOKEN",
            "Content-Type": "application/json"
          }
        },
        {
          "name": "create_lead",
          "description": "Create a new lead in Salesforce",
          "headers": {
            "Authorization": "Bearer YOUR_SF_TOKEN",
            "Content-Type": "application/json"
          }
        }
      ]
    },
    "calendly": {
      "name": "Calendly Scheduling",
      "description": "Schedule meetings via Calendly",
      "server_url": "https://api.calendly.com/mcp",
      "tools": [
        {
          "name": "schedule_meeting",
          "description": "Schedule a meeting",
          "headers": {
            "Authorization": "Bearer YOUR_CALENDLY_TOKEN"
          },
          "query_params": {
            "user": "YOUR_CALENDLY_USER"
          }
        }
      ]
    },
    "hubspot": {
      "name": "HubSpot CRM",
      "description": "Connect to HubSpot for customer management",
      "server_url": "https://api.hubapi.com/mcp",
      "tools": [
        {
          "name": "get_contact",
          "description": "Retrieve contact information",
          "headers": {
            "Authorization": "Bearer YOUR_HUBSPOT_TOKEN"
          }
        },
        {
          "name": "create_ticket",
          "description": "Create support ticket",
          "headers": {
            "Authorization": "Bearer YOUR_HUBSPOT_TOKEN"
          }
        }
      ]
    },
    "custom_api": {
      "name": "Custom API",
      "description": "Connect to your custom API endpoint",
      "server_url": "https://your-api.com/mcp",
      "tools": [
        {
          "name": "custom_function",
          "description": "Call custom API function",
          "headers": {
            "Authorization": "Bearer YOUR_API_TOKEN",
            "X-API-Version": "v1"
          },
          "query_params": {
            "format": "json"
          }
        }
      ]
    },
    "airtable": {
      "name": "Airtable Database",
      "description": "Connect to Airtable for data management",
      "server_url": "https://api.airtable.com/v0/mcp",
      "tools": [
        {
          "name": "get_records",
          "description": "Retrieve records from Airtable",
          "headers": {
            "Authorization": "Bearer YOUR_AIRTABLE_TOKEN"
          },
          "query_params": {
            "base_id": "YOUR_BASE_ID"
          }
        },
        {
          "name": "create_record",
          "description": "Create new record in Airtable",
          "headers": {
            "Authorization": "Bearer YOUR_AIRTABLE_TOKEN"
          }
        }
      ]
    }
  },
  "agent_templates": {
    "customer_service": {
      "agent_name": "Customer Service Bot",
      "voice_id": "11labs-Adrian",
      "language": "en-US",
      "voice_speed": 1.0,
      "voice_temperature": 0.8,
      "interruption_sensitivity": 0.6,
      "responsiveness": 0.8,

      "backchannel_frequency": 0.7,
      "ambient_sound": "office",
      "boosted_keywords": ["support", "help", "issue", "problem"],
      "end_call_after_silence_ms": 300000,
      "enable_voicemail_detection": true,
      "voicemail_message": "Thank you for calling. Please leave a message and we'll get back to you.",
      "post_call_analysis_data": [
        {
          "type": "string", 
          "name": "issue_category",
          "description": "The category of customer issue"
        },
        {
          "type": "string",
          "name": "resolution_status", 
          "description": "Whether the issue was resolved"
        }
      ]
    },
    "sales_assistant": {
      "agent_name": "Sales Assistant",
      "voice_id": "11labs-Amy",
      "language": "en-US",
      "voice_speed": 1.1,
      "voice_temperature": 1.2,
      "interruption_sensitivity": 0.7,
      "responsiveness": 0.9,
      "enable_backchannel": true,
      "backchannel_frequency": 0.8,
      "ambient_sound": "none",
      "boosted_keywords": ["price", "discount", "demo", "trial"],
      "end_call_after_silence_ms": 240000,
      "post_call_analysis_data": [
        {
          "type": "string",
          "name": "lead_score",
